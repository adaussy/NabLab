{
    "name": "fr.cea.nabal.vscode.extension",
    "displayName": "CEA NabLab VSCode extension",
    "description": "The NabLab extension for VSCode",
    "version": "0.4.3",
    "publisher": "CEA",
    "license": "EPL-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/cea-hpc/NabLab.git"
    },
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "nabla"
    ],
    "activationEvents": [
        "onLanguage:nabla",
        "onCommand:nablabweb.showLatexView"
    ],
    "main": "out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "nabla",
                "aliases": [
                    "nabla"
                ],
                "extensions": [
                    ".n"
                ],
                "configuration": "./nabla.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "nabla",
                "scopeName": "text.n",
                "path": "./syntaxes/nabla.tmLanguage.json"
            }
        ],
        "commands": [
            {
              "command": "nablabweb.showLatexView",
              "title": "Display LaTex View",
              "category": "NabLab"
            }
        ]
    },
    "devDependencies": {
        "@types/node": "16.6.0",
        "@types/react": "17.0.17",
        "@types/react-dom": "17.0.9",
        "@types/react-router-dom": "5.1.8",
        "@types/vscode": "1.50.0",
        "@types/vscode-webview": "^1.57.0",
        "css-loader": "6.2.0",
        "npm-run-all": "4.1.5",
        "prettier": "2.3.2",
        "rimraf": "3.0.2",
        "style-loader": "3.2.1",
        "ts-loader": "9.2.5",
        "typescript": "4.3.5",
        "typescript-formatter": "7.2.2",
        "webpack": "5.50.0",
        "webpack-cli": "4.7.2"
    },
    "dependencies": {
        "prop-types": "15.7.2",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-router-dom": "5.2.0",
        "reflect-metadata": "0.1.13",
        "vscode-languageclient": "^6.1.3"
    },
    "scripts": {
        "format": "prettier --write \"src/**/*.{js,ts,tsx,css}\"",
        "format-lint": "prettier --list-different \"src/**/*.{js,ts,tsx,css}\"",
        "vscode:prepublish": "npm run compile",
        "compile": "npm-run-all compile:*",
        "watch": "npm-run-all -p watch:*",
        "compile:views": "webpack  --mode development",
        "compile:extension": "tsc -p ./",
        "watch:views": "webpack  --watch --mode development",
        "watch:extension": "tsc -watch -p ./"
      }
}
